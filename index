    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const evaluateBtn = document.getElementById('evaluate-btn');
            const restartBtn = document.getElementById('restart-btn');
            const resultsSection = document.getElementById('results-section');
            const totalScoreEl = document.getElementById('total-score');
            const resultTitle = document.getElementById('result-title');
            const resultDescription = document.getElementById('result-description');
            const amiguisticLevel = document.getElementById('amiguistic-level');
            
            evaluateBtn.addEventListener('click', function() {
                // Verificar si todas las preguntas est谩n respondidas
                let allAnswered = true;
                for (let i = 1; i <= 8; i++) {
                    if (!document.querySelector(`input[name="p${i}"]:checked`)) {
                        allAnswered = false;
                        break;
                    }
                }
                
                if (!allAnswered) {
                    alert('Por favor, responde todas las preguntas antes de evaluar.');
                    return;
                }
                
                // Calcular puntuaci贸n total
                let totalScore = 0;
                for (let i = 1; i <= 8; i++) {
                    const selectedValue = document.querySelector(`input[name="p${i}"]:checked`).value;
                    totalScore += parseInt(selectedValue);
                }
                
                // Determinar resultado
                let resultText = '';
                let titleText = '';
                
                if (totalScore >= 35) {
                    titleText = '隆Eres un SUPER amigo! ';
                    resultText = 'Tienes unas habilidades sociales excepcionales. Tus amigos tienen mucha suerte de contar contigo. Sigue siendo ese pilar de apoyo y comprensi贸n que tanto valoran.';
                } else if (totalScore >= 25) {
                    titleText = 'Vas por buen camino ';
                    resultText = 'Tienes buenas habilidades sociales y eres un amigo valioso. Hay algunos aspectos que puedes pulir, pero en general tus relaciones son s贸lidas y significativas.';
                } else {
                    titleText = 'Oportunidad para mejorar ';
                    resultText = 'Todos podemos crecer en nuestras relaciones. Identifica 谩reas espec铆ficas donde puedas mejorar y trabaja en ellas. La amistad es un m煤sculo que se fortalece con la pr谩ctica.';
                }
                
                // Obtener nivel amigu铆stico seleccionado
                const selectedLevel = document.querySelector('input[name="nivel"]:checked');
                const levelText = selectedLevel ? selectedLevel.value : 'No seleccionado';
                
                // Formatear nivel para mostrar
                let formattedLevel = '';
                switch(levelText) {
                    case 'principiante':
                        formattedLevel = 'Principiante';
                        break;
                    case 'confiable':
                        formattedLevel = 'Compa帽ero Fiable';
                        break;
                    case 'alma':
                        formattedLevel = 'Alma de la Amistad';
                        break;
                    case 'sabio':
                        formattedLevel = 'Sabio de los V铆nculos';
                        break;
                    default:
                        formattedLevel = 'Nivel no seleccionado';
                }
                
                // Mostrar resultados
                totalScoreEl.textContent = totalScore;
                resultTitle.textContent = titleText;
                resultDescription.textContent = resultText;
                amiguisticLevel.textContent = `Nivel Amigu铆stico: ${formattedLevel}`;
                
                // Mostrar secci贸n de resultados
                resultsSection.style.display = 'block';
                
                // Desplazarse a los resultados
                resultsSection.scrollIntoView({ behavior: 'smooth' });
            });
            
            restartBtn.addEventListener('click', function() {
                // Reiniciar formulario
                document.getElementById('friendship-form').reset();
                
                // Ocultar resultados
                resultsSection.style.display = 'none';
                
                // Desplazarse al inicio
                document.querySelector('header').scrollIntoView({ behavior: 'smooth' });
            });
        });
    </script>
